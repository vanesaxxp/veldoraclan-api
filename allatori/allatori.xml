<config>
    <input>
        <jar in="${inputJar}" out="${outputJar}"/>
    </input>

    <classpath>
        <jar name="${classpathJars}"/>
    </classpath>

    <keep-names>
        <!-- Plugin Ana Sınıfı -->
        <class name="dev.eggsv31.veldora.veldoraClan.VeldoraClan" access="public">
            <method name="main" access="public"/>
        </class>

        <!-- Net.kyori.adventure Paketini Obfuscation'dan Hariç Tut -->
        <class name="net.kyori.adventure.**" access="public">
            <field access="public"/>
            <method access="public"/>
        </class>

        <!-- Tüm Protected Erişim Seviyeleri -->
        <class access="protected">
            <field access="protected"/>
            <method access="protected"/>
        </class>

        <!-- Tüm Sınıf İsimlerini Koruyup İçeriği Obfuscate Et -->
        <class template="class *" />

        <!-- Bukkit EventHandler Metotlarını Koruma -->
        <method template="@org.bukkit.event.EventHandler *(**)" />

        <!-- Bukkit Eventlerin getHandlerList Metodunu Koruma -->
        <class template="class extends org.bukkit.event.Event">
            <method template="public static getHandlerList(**)" />
        </class>

        <!-- @Override Annotation'lı Metotları Koruma -->
        <method template="@java.lang.Override *(**)" />

        <!-- Özel API Sınıflarını ve Metotlarını Koruma -->
        <class template="class dev.eggsv31.veldoraClan.API">
            <method template="public *(**)" />
        </class>
    </keep-names>

    <property name="log-file" value="${logFile}"/>
    <property name="packages-naming" value="keep"/>
    <property name="extensive-flow-obfuscation" value="maximum"/>
    <property name="generics" value="remove"/>
    <property name="line-numbers" value="obfuscate"/>
    <property name="inner-classes" value="remove"/>
    <property name="remove-toString" value="enable"/>
	<property name="local-variables-naming" value="optimize"/>
	<property name="control-flow-obfuscation" value="enable"/>
    
    <!-- Obfuscation Ayarları -->
	<property name="set-methods-to-public" value="all"/>
	<property name="set-fields-to-public" value="all"/>
    
    <property name="string-encryption" value="disable"/>
</config>